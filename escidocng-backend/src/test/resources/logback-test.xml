<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>:: IT [%thread] %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="de.escidocng" level="debug" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>